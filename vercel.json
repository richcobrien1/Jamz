{
  "version": 2,
  "builds": [
    {
      "src": "backend/src/**/*.js",
      "use": "@vercel/node",
      "config": {
        "runtime": "nodejs18.x"
      }
    },
    {
      "src": "backend/src/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/client/package.json",
      "use": "@vercel/static-build",
      "config": { 
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/src/api/$1.js"
    },
    {
      "src": "^/static/(.*)",
      "dest": "/frontend/client/static/$1"
    },
    {
      "src": ".*",
      "dest": "/frontend/client/public/index.html"
    }
  ]
}
