{
  "version": 2,
  "builds": [
    {
      "src": "backend/src/**/*.js",  // This looks correct based on your file structure
      "use": "@vercel/node"
    },
    {
      "src": "frontend/client/package.json",
      "use": "@vercel/static-build",
      "config": { 
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/src/api/$1"  // This is the key change - point to /backend/src/api/$1
    },
    {
      "src": "^/static/(.*)",
      "dest": "/frontend/client/static/$1"
    },
    {
      "src": ".*",
      "dest": "/frontend/client/public/index.html"
    }
  ]
}
