{
  "version": 2,
  "builds": [
    { "src": "api/index.js", "use": "@vercel/node" }
  ],
  "routes": [
    {
      "src": "/api/.*",
      "dest": "api/index.js",
      "methods": ["GET", "POST", "OPTIONS", "PUT", "DELETE"]
    },
    {
      "src": "/.*",
      "dest": "public/index.html",
      "status": 200
    }
  ]
}