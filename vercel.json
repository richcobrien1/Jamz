{
  "version": 2,
  "framework": "create-react-app",
  "buildCommand": "cd frontend/client && npm install && npm run build",
  "outputDirectory": "frontend/client/build",
  "routes": [
    { "src": "/api/(.*)", "dest": "/backend/src/api/$1.js" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/frontend/client/build/index.html" }
  ]
}
