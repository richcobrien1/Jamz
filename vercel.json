{
  "version": 2,
  "builds": [
    {
      "src": "backend/package.json",
      "use": "@vercel/node",
      "config": { "includeFiles": ["backend/src/**"] } 
    },
    {
      "src": "frontend/client/package.json",
      "use": "@vercel/static-build",
      "config": { "outputDirectory": "frontend/client" } 
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/src/index.js"
    },
    {
      "src": "/static/(.*)",
      "dest": "/frontend/client/static/$1"
    },
    {
      "src": "/favicon.ico",
      "dest": "/frontend/client/favicon.ico"
    },
    {
      "src": "/manifest.json",
      "dest": "/frontend/client/manifest.json"
    },
    {
      "src": "/logo(.*).png",
      "dest": "/frontend/client/logo$1.png"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/client/index.html"
    }
  ]
}
