{
  "version": 2,
  "builds": [
    {
      "src": "backend/package.json",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "backend/app.js",
          "backend/src/**",
          "backend/config/**",
          "backend/routes/**",
          "backend/models/**"
        ]
      }
    },
    {
      "src": "frontend/client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "cd frontend/client && npm run build && echo '--- VERCEL BUILT INDEX.HTML START ---' && cat build/index.html && echo '--- VERCEL BUILT INDEX.HTML END ---'",
        "outputDirectory": "frontend/client/build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/app.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
