{
  "version": 2,
  "builds": [
    {
      "src": "backend/package.json",
      "use": "@vercel/node",
      "config": { 
        "includeFiles": [
          "backend/src/**"
        ]
      }
    },
    {
      "src": "frontend/client/package.json",
      "use": "@vercel/static-build",
      "config": { "outputDirectory": "/" } 
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/src/index.js"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html" 
    }
  ]
}
