# Application Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1
LOG_LEVEL=debug

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_ACCESS_EXPIRATION=86400
JWT_REFRESH_EXPIRATION=2592000

# Database Configuration
# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=audiogroupapp
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# MongoDB
MONGO_URI=mongodb://localhost:27017/audiogroupapp

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# InfluxDB
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=your_influxdb_token
INFLUXDB_ORG=audiogroupapp
INFLUXDB_BUCKET=location_data

# WebRTC/Mediasoup
MEDIASOUP_LISTEN_IP=0.0.0.0
MEDIASOUP_ANNOUNCED_IP=127.0.0.1
MEDIASOUP_MIN_PORT=10000
MEDIASOUP_MAX_PORT=10100

# STUN/TURN Servers
STUN_SERVER=stun:stun.l.google.com:19302
TURN_SERVER=turn:your-turn-server.com:3478
TURN_USERNAME=your_turn_username
TURN_CREDENTIAL=your_turn_credential

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
S3_BUCKET=audiogroupapp-media

# GCP Configuration (for cross-cloud compatibility)
GCP_PROJECT_ID=your-gcp-project-id
GCP_STORAGE_BUCKET=audiogroupapp-media-gcp

# Azure Configuration (for cross-cloud compatibility)
AZURE_STORAGE_CONNECTION_STRING=your_azure_connection_string
AZURE_STORAGE_CONTAINER=audiogroupapp-media-azure

# Kafka
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=audiogroupapp
KAFKA_GROUP_ID=audiogroupapp-group

# Push Notifications
FCM_SERVER_KEY=your_fcm_server_key
APNS_KEY_ID=your_apns_key_id
APNS_TEAM_ID=your_apns_team_id
APNS_KEY_FILE=path/to/AuthKey_KEYID.p8
APNS_BUNDLE_ID=com.audiogroupapp.ios

# Payment Processing
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Maps and Geocoding
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# Logging
LOG_FORMAT=combined
LOG_DIR=../logs

# CORS
CORS_ORIGIN=*

# Security
HELMET_CONTENT_SECURITY_POLICY=false
